<style>
  .sidebar-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }
  .sidebar-link svg {
    stroke: #333;
    fill: #333;
    transition: stroke 0.2s, fill 0.2s;
  }
  .sidebar-link:hover {
    color: #6f6aff;
  }
  .sidebar-link:hover svg {
    stroke: #6f6aff;
    fill: #6f6aff;
  }
</style>
<aside id="aaSidebar" class="aa-sidebar">
  <div class="aa-sidebar-logo">
    <%= image_tag 'active_act/logo.svg', alt: 'ActiveAct Logo', style: 'width: 100%; height: auto; display: block;' %>
  </div>
  <nav>
    <div class="aa-sidebar-nav">
      <%= link_to '#', class: 'sidebar-link' do %>
        <svg viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="2" y="2" width="18" height="18" rx="4" stroke="currentColor" stroke-width="2"/><rect x="7" y="7" width="8" height="8" rx="2" fill="currentColor"/></svg>
        Dashboard
      <% end %>
      <%= link_to '#', class: 'sidebar-link' do %>
